{
  "name": "@octokit/auth-app",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.0-development",
  "description": "GitHub App authentication for JavaScript",
  "scripts": {
    "build": "pika build",
    "test": "jest --coverage",
    "semantic-release": "semantic-release"
  },
  "repository": "https://github.com/octokit/auth-app.js",
  "keywords": [
    "github",
    "octokit",
    "authentication",
    "api"
  ],
  "author": "Gregor Martynus (https://github.com/gr2m)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/octokit/auth-app.js/issues"
  },
  "homepage": "https://github.com/octokit/auth-app.js#readme",
  "dependencies": {
    "@octokit/request": "^5.3.0",
    "@octokit/types": "^1.1.0",
    "@types/lru-cache": "^5.1.0",
    "lru-cache": "^5.1.1",
    "universal-github-app-jwt": "^1.0.1",
    "universal-user-agent": "^4.0.0"
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.7.0",
    "@pika/plugin-build-web": "^0.7.0",
    "@pika/plugin-ts-standard-pkg": "^0.7.0",
    "@types/fetch-mock": "^7.3.1",
    "@types/jest": "^24.0.13",
    "@types/lolex": "^3.1.1",
    "fetch-mock": "^7.3.9",
    "jest": "^24.8.0",
    "lolex": "^5.0.0",
    "semantic-release": "^15.13.24",
    "semantic-release-plugin-update-version-in-files": "^1.0.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "pkg/dist-web/*",
            "pkg/dist-node/*",
            "pkg/*/version.*"
          ]
        }
      ]
    ]
  }
}
